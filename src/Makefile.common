# Microcontroller settings
MCU = atmega328p
F_CPU = 16000000

# Device for programmer
PORT = $(wildcard /dev/tty.usbmodemf*)

AR      = avr-ar
AS      = avr-as
CC      = avr-gcc -mmcu=$(MCU)
CXX     = avr-g++ -mmcu=$(MCU)
OBJCOPY = avr-objcopy
OBJDUMP = avr-objdump
RANLIB  = avr-ranlib
READELF = avr-readelf

ARFLAGS  =
CFLAGS   = -Os -Wall -Wextra
CPPFLAGS = -DF_CPU=$(F_CPU) 
CXXFLAGS = $(CFLAGS)
LDFLAGS  =
LDLIBS   =

FMT = "%6s  %-20s { %s }\n"

%.o: %.c
	@printf $(FMT) "CC" "$@" "$^"
	$(CC) $(CPPFLAGS) $(CFLAGS) -c -o $@ $<

%.o: %.cpp
	@printf $(FMT) "CXX" "$@" "$^"
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c -o $@ $<

%.a:
	@printf $(FMT) "LIB" "$@" "$^"
	$(AR) cr $@ $^
	$(RANLIB) $@

%.elf: %.o
	@printf $(FMT) "LINK" "$@" "$^ $(LDLIBS)"
	$(CC) $(LDFLAGS) $^ $(LDLIBS) -o $@

%.hex: %.elf
	@printf $(FMT) "HEX" "$@" "$(shell tools/memusage.py $<)"
	$(OBJCOPY) -j .text -j .data -O ihex $< $@

info-%: %.elf
	$(READELF) -S $<

install-%: %.hex
	avrdude -p $(MCU) -c arduino -P $(PORT) -v -U flash:w:$<

%.d: %.c
	$(CC) -MD -MM $(CPPFLAGS) -o $@ $<
	sed -i "" -e "s,\($*\)\.o[ :]*,\1.o $@ : ,g" $@

%.d: %.cpp
	$(CXX) -MD -MM $(CPPFLAGS) -o $@ $<
	sed -i "" -e "s,\($*\)\.o[ :]*,\1.o $@ : ,g" $@

clean::
	rm -vf *.{elf,hex,d,o,a,map} *~

ifneq ($(VERBOSE), 1)
.SILENT:
endif
